{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"] // This allows you to use '@' as an alias for the 'src' directory
      }
    },
    "include": [
      "src/**/*" // Include all files in the src directory
    ],
    "exclude": [
      "node_modules", // Exclude node_modules
      "**/*.spec.js" // Optionally exclude test files
    ]
  }